<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
    </head>
    <body>
        <!-- Navbar -->
        <%- include('../partials/navbar') %>

        <h1 class="mt-5 text-center">Results</h1>
        <h2 class="mt-3 text-center">
            Hi <%= applicant_name %>, here are your results from the
            quesitonnaire.
        </h2>

        <% if(typeof alert != 'undefined') { %> <% alert.forEach(function(error)
        { %>
        <div
            class="alert alert-warning alert-dismissible fade show"
            role="alert"
        >
            <%= error.msg %>
            <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"
            ></button>
        </div>
        <% }) %> <% } %>

        <div class="card-group p-5">
            <div class="card">
                <img
                    src="https://randomuser.me/api/portraits/men/1.jpg"
                    class="card-img-top"
                    alt="..."
                />
                <div class="card-body">
                    <h5 class="card-title">Best Match</h5>
                    <p class="card-text">
                        Compatibility %: <%= resident[0]?.fitness %><br />
                        Name: <%= resident[0]?.name %> <br />
                        Email: <%= resident[0]?.email %><br />
                        Handicap friendly: <% if (resident[0]?.handicapFriendly
                        === "handicapFriendlyNo") { %> No <% } else if
                        (resident[0]?.handicapFriendly ===
                        "handicapFriendlyYes") { %> Yes <% } %><br />
                        Price: <% if (resident[0]?.budget === "1") { %> <2000
                        DKK <% } else if (resident[0]?.budget === "2") { %>
                        <3000 DKK <% } else if (resident[0]?.budget === "3") {
                        %> <4000 DKK <% } else if (resident[0]?.budget === "4")
                        { %> <5000 DKK <% } else if (resident[0]?.budget ===
                        "5") { %> <6000 DKK <% } %> <br />
                        Location: <% if (resident[0]?.aalborgSection ===
                        "sectionAalborgC") { %> 9000 - Aalborg Central <% } else
                        if (resident[0]?.aalborgSection === "sectionAalborgSW")
                        { %> 9200 - Aalborg South West <% } else if
                        (resident[0]?.aalborgSection === "sectionAalborgSE") {
                        %> 9210 - Aalborg South East <% } else if
                        (resident[0]?.aalborgSection === "sectionAalborgSW") {
                        %> 9220 - Aalborg East <% } %>
